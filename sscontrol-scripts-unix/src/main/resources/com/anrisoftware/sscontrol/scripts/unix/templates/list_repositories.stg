aptRepository(args) ::= <<
for APT in `find <args.packagesSourcesDir>/ -name \*.list`; do
    grep -Po "(?\<=^deb\s).*?(?=#|$)" $APT | while read ENTRY ; do
        HOST=`echo $ENTRY | cut -d/ -f3`
        USER=`echo $ENTRY | cut -d/ -f4`
        PPA=`echo $ENTRY | cut -d/ -f5`
        if [ "ppa.launchpad.net" = "$HOST" ]; then
            echo ppa:$USER/$PPA
        else
            echo "dep ${ENTRY}"
        fi
    done
done

>>
