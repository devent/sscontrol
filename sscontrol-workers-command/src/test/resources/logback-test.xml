<configuration scan="true">

	<property resource="logback.properties"/>

	<appender name="TEST_STYLE" class="ch.qos.logback.core.ConsoleAppender">
		<target>System.err</target>
		<encoder>
			<pattern>[%level] %-4relative [%thread] %logger{0} - %msg %n%rEx{short}</pattern>
			<immediateFlush>true</immediateFlush>
		</encoder>
	</appender>

	<root level="ERROR">
		<appender-ref ref="TEST_STYLE" />
	</root>

    <logger name="com.anrisoftware" level="INFO" />
	<logger name="com.anrisoftware.sscontrol" level="ALL" />

</configuration>
